# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.FreelanceController.index(request: play.mvc.Http.Request)
GET     /search                     controllers.FreelanceController.search(inputKeyword: String)
GET     /globalStats                controllers.FreelanceController.globalStats()
GET     /localStats/:projectID      controllers.FreelanceController.localStats(projectID: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
